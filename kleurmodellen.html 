<!DOCTYPE html>
<html>
<head>
    <title>Kleuren Modelleren</title>
</head>
<body>
    <h1>Kleuren Modelleren</h1>
    
    <!-- Kleurenkiezer -->
    <input type="color" id="colorPicker">
    
    <!-- Knop om kleur op te slaan -->
    <button onclick="saveColor()">Kleur Opslaan</button>
    
    <!-- Lijst van opgeslagen kleuren -->
    <ul id="colorList"></ul>
    
    <!-- Knop om opgeslagen kleuren weer te geven -->
    <button onclick="displayColors()">Toon Opgeslagen Kleuren</button>
    
    <!-- JavaScript om kleuren op te slaan en weer te geven -->
    <script>
        // Array om opgeslagen kleuren bij te houden
        const savedColors = [];
        
        // Referenties naar HTML-elementen
        const colorPicker = document.getElementById('colorPicker');
        const colorList = document.getElementById('colorList');
        
        // Functie om kleur op te slaan
        function saveColor() {
            const selectedColor = colorPicker.value;
            savedColors.push(selectedColor);
            colorPicker.value = ''; // Leeg de kleurenkiezer
        }
        
        // Functie om opgeslagen kleuren weer te geven
        function displayColors() {
            colorList.innerHTML = ''; // Leeg de lijst
            for (const color of savedColors) {
                const listItem = document.createElement('li');
                listItem.style.backgroundColor = color;
                listItem.textContent = color;
                colorList.appendChild(listItem);
            }
        }
    </script>
</body>
</html>
